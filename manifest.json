{
  "manifest_version": 2,
  "name": "Resume updater",
  "version": "1.0",
  "description": "Resume updater for hh.ru",
  "homepage_url": "https://github.com/coservas/resume-updater",
  "icons": {
    "32": "icons/nuclear.png"
  },

  "applications": {
    "gecko": {
      "id": "resume-updater@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/nuclear.png",
    "default_title": "Resume-updater",
    "default_popup": "bar/bar.html"
  },

  "background": {
    "scripts": ["updater.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true,
    "chrome_style": true
  }
}