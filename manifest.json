{
  "manifest_version": 2,
  "name": "update-resume-on-hh",
  "version": "1.0",
  "description": "",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "icons": {
    "32": "icons/nuclear.png"
  },

  "applications": {
    "gecko": {
      "id": "update-resume-on-hh@mozilla.org",
      "strict_min_version": "45.0"
    }
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/nuclear.png",
    "default_title": "Resume-updater",
    "default_popup": "html/status-bar.html"
  }
}